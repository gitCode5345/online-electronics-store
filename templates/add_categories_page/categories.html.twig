{% extends "base.html.twig" %}

{% block sidebar %}{% endblock sidebar %}
{% block off_sidebar %}{% endblock off_sidebar %}
{% block off_footer %}{% endblock off_footer %}
{% block product %}{% endblock product %}

{% block content %}
    <div class="container mt-4">
        <h2 class="text-center">Add Category</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <form action="{{ path('add_categories') }}" method="post" enctype="multipart/form-data">
            <div class="row mt-4">
                <div class="col">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="col">
                    <label for="name" class="form-label">Slug</label>
                    <input type="text" class="form-control" id="name" name="slug" required>
                </div>
            </div>
            <div class="row">
                <div class="col mt-4 d-flex flex-row-reverse">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </form>
    </div>
{% endblock content %}
