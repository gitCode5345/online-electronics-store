{% block stylesheets %}
<style>
    .custom-content {
        color: #333;
    }

    /* Стиль для стрелочек */
    .arrow {
        margin-left: 10px;
        transition: transform 0.3s;
    }

    .collapsed .arrow {
        transform: rotate(90deg);
    }

    .nav-item {
        position: relative;
    }
    
    .nav-item .dropdown-menu {
        display: none;
        position: absolute;
        left: 100%;
        top: 0px;
        margin-left: 10px;
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 5px;
        z-index: 9999; /* Убедитесь, что z-index высокий */
    }
    
    .nav-item:hover .dropdown-menu {
        display: block;
    }

    /* Стили для иконок */
    .nav-item i {
        margin-right: 8px;
    }

    /* Стили для кружочка с количеством товаров */
    .cart-container {
        position: relative;
        display: inline-block;
    }

    .cart-badge {
        position: absolute;
        top: 2px;
        right: -65px;
        background-color: #ff5733;
        color: white;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        text-align: center;
        font-size: 12px;
        font-weight: bold;
    }
    .logo-container {
        width: 150px;
        height: 150px;
        margin: 0 auto 25px auto; /* Центрирование и отступ снизу */
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .header-logo {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain; /* Обеспечивает сохранение пропорций логотипа */
    }

    /* Стили для бургер-меню */
    .burger-menu {
        display: none;
        cursor: pointer;
    }

    .burger-bar {
        width: 30px;
        height: 4px;
        background-color: #333;
        margin: 5px 0;
        transition: all 0.3s ease-in-out;
    }

    .burger-menu.open .burger-bar:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
    }

    .burger-menu.open .burger-bar:nth-child(2) {
        opacity: 0;
    }

    .burger-menu.open .burger-bar:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -5px);
    }

    /* Адаптивность меню */
    @media (max-width: 768px) {
        .nav {
            display: none;
            flex-direction: column;
            align-items: center;
        }
        .nav.active {
            display: flex;
        }
        .burger-menu {
            display: block;
        }
    }
    video {
        position: relative;
    }
</style>
{% endblock %}

