<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Default Title{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }
        .sidebar {
            height: 100vh;
            position: sticky;
            top: 0;
            background-color: #f8f9fa;
            padding: 1rem;
        }
        .content {
            margin: 0;
            padding: 0;
        }
        
        .first-block a {
            font-family: 'Josefin Sans', sans-serif;
            text-transform: capitalize;
            color: #121212;
            text-decoration: none;
        }

        .arrow {
            margin-left: 10px;
            transition: transform 0.3s;
        }

        .collapsed .arrow {
            transform: rotate(90deg);
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <nav class="col-md sidebar">
            {% block sidebar %}
            <ul class="nav flex-column first-block">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Shop <span class="arrow">&#x25B6;</span></a>
                    <ul class="nav flex-column ms-3 collapse" id="shopMenu">
                        <li class="nav-item"><a class="nav-link" href="#">Shop Item 1</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Shop Item 2</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Pages <span class="arrow">&#x25B6;</span></a>
                    <ul class="nav flex-column ms-3 collapse" id="pagesMenu">
                        <li class="nav-item"><a class="nav-link" href="#">Page 1</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Page 2</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Sale <span class="arrow">&#x25B6;</span></a>
                    <ul class="nav flex-column ms-3 collapse" id="saleMenu">
                        <li class="nav-item"><a class="nav-link" href="#">Sale Item 1</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Sale Item 2</a></li>
                    </ul>
                </li>
            </ul>
            {% endblock %}
        </nav>

        <main class="col-9 col-md-10 content">
            {% block content %}
            <p>Default content goes here...</p>
            {% endblock %}
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('click', function () {
            let submenu = this.nextElementSibling;
            if (submenu && submenu.classList.contains('collapse')) {
                submenu.classList.toggle('show');
                this.classList.toggle('collapsed');
            }
        });
    });
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
